/* pages/search/search.wxss */
page{
  background: #f5f5f5;
}
.header{
  display: flex;
  width: 100%;
  height: 50px;
  padding: 0 20rpx;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  box-sizing: border-box;
}
.search-input{
  display: flex;
  width: 80%;
  height: 30px;
  padding: 0 20rpx;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ddd;
  background: #fff;
  box-sizing: border-box;
  border-radius: 30px;
}
.search-box{
  width: 100%;
  padding: 30rpx;
  background: #fff;
  margin-bottom: 40rpx;
}
.search-content{
  padding: 10rpx;
}
.search-content text{
  display: inline-block;
  margin: 10rpx;
  padding: 10rpx;
  background: #f5f5f5;
  border-radius: 5px;
}
.clear-storage{
  text-align: center;
  padding-top: 30rpx;
  border-top: 1px solid #f5f5f5;
  font-size: 15px;
  color: #666;
}
